<div class="task">
  <div class="body">
    <div class="meta">
      <span class="category task_<%= task.category %>"><%= I18n.t("task.#{task.category}") %></span>
      <span class="date"><%= date_with_time(task.date) %></date>
    </div>
    <div class="description"><%= link_to task.description, task_path(task) %></div>
  </div>
</div>
