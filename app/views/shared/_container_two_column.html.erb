<div id="container-two-collumn" >
  <div id="left">
    <h1><%= yield :page_title %></h1>
    <%= yield %>
  </div>

  <div id="right">
    <% if yield(:action_nav) %>
      <div id="actions">
        <ul>
          <%= yield(:action_nav) %>
        </ul>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div id="notice">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:error] %>
      <div id="error">
        <%= flash[:error] %>
      </div>
    <% end %>

    <%= yield :right %>
  </div>
</div>

