<div class="row" >
  <div class="col-xs-12 col-md-8 col-lg-8">
    <h1><%= yield :page_title %></h1>
    <%= yield %>
  </div>

  <div class="col-xs-12 col-md-4 col-lg-3">
    <% if content_for?(:action_nav) %>
      <div id="actions">
        <ul>
          <%= yield(:action_nav) %>
        </ul>
      </div>
    <% end %>

    <% if flash['notice'] %>
      <div id="notice">
        <%= flash['notice'] %>
      </div>
    <% end %>
    <% if flash['error'] %>
      <div id="error">
        <%= flash['error'] %>
      </div>
    <% end %>

    <%= yield :right %>
  </div>
  <% if content_for? :additional_info %>
    <%= yield(:additional_info) %>
  <% end %>
</div>
