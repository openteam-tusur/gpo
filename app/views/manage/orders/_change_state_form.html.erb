<%= simple_form_for @order, :url => update_state_manage_chair_order_path(@chair, @order), :html => { :method => :put } do | form | %>
  <fieldset>
    <% # TODO: проверить на разрешение утверждения приказа %>
    <% if false %>
      <%= form.input :number %>
      <%= form.input :approved_at, :as => :datepicker %>
    <% end %>
    <%= form.input :comment, :as => :text, :input_html => { :class => "comment_for_change_state_order" } %>
    <%= form.button :submit, Order.human_state_event_name(:to_review), :name => :to_review %>
    <%= form.button :submit, Order.human_state_event_name(:review), :name => :review %>
    <%= form.button :submit, Order.human_state_event_name(:cancel), :name => :cancel %>
    <%= form.button :submit, Order.human_state_event_name(:approve), :name => :approve %>
  </fieldset>
<% end %>
