<div id='stage_<%= stage.id %>' class='stage object'>
  <h2><%= stage.project.cipher%></h2>
    <h3>
      <%= stage.project.title %>
    </h3>

  <div class='details'>Руководители: <%= project_project_managers(stage.project) %></div>
  <div class='stage_achievements'>
    <%if stage.stage_achievement.present?%>
      <h3>
        Достижения
        <%= link_to edit_manage_stage_achievement_path(stage.stage_achievement) do %>
          <i class="fas fa-edit" title='Редактировать'></i>
        <% end %>
        <%=link_to_delete_with_icon(manage_stage_achievement_path(stage.stage_achievement))%>
      </h3>
      <table>
        <thead>
          <tr>
            <th>Гранты Попечительского совета, УМНИК и др.</th>
            <th>Публикации в периодической печати</th>
            <th>Участие в выставках</th>
            <th>Дипломы и призовые места во всероссийских конференциях и конкурсах по тематике ГПО</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= stage.stage_achievement.grant %></td>
              <td><%= stage.stage_achievement.publication %></td>
              <td><%= stage.stage_achievement.exhibition %></td>
              <td><%= stage.stage_achievement.diploma %></td>
            </tr>
        </tbody>
      </table>
    <%else%>
      <h3>
        Достижения
        <%= link_to new_manage_stage_achievement_path(stage: stage) do %>
          <i class="fas fa-plus" title='Добавить'></i>
        <% end %>
      </h3>
    <%end%>
  </div>

  <div class='student_achievements'>
    <h3>Участники</h3>
    <table>
      <thead>
        <tr>
          <th>ФИО студентов</th>
          <th>Курс</th>
          <th>№ уч. группы</th>
          <th>Баллы (семестровая составляющая)</th>
          <th>Баллы (аттестационная составляющая)</th>
          <th>Итоговая сумма баллов</th>
          <th>Оценка полученная пересчетом</th>
          <th>Доклады на международных конференциях</th>
        </tr>
      </thead>
      <tbody>
        <%stage.project.participants.active.each do |p|%>
          <tr>
            <td><%= p.name %></td>
            <td><%= p.course %></td>
            <td><%= p.edu_group %></td>
            <td><%= p.total_term_mark.round %></td>
            <td></td>
            <td><%= p.total_term_mark.round %></td>
            <td><%= total_mark_counter(p.total_term_mark.round) %></td>
            <td>
              <%if stage.student_achievements.where(participant_id: p).present?%>
                <% student_achievement = stage.student_achievements.where(participant_id: p).first %>
                <div>
                  <%=student_achievement.title%>
                </div>
                <div class='report_actions'>
                  <%=link_to 'Редактировать', edit_manage_student_achievement_path(student_achievement)%>
                  <%=link_to_delete(manage_student_achievement_path(student_achievement))%>
                </div>
              <%else%>
                <%=link_to 'Добавить', new_manage_student_achievement_path(stage: stage, participant: p)%>
              <%end%>
            </td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>

</div>
