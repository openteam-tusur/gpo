<fieldset>
<%= f.hidden_field :stage_id %>
<%= f.input :kind,
            collection: [
              ['Гранты Попечительского совета, УМНИК и др.', :grant],
              ['Участие в выставках', :exhibition]
            ],
            label: 'Вид достижения',
            as: :select
          %>
<%= f.input :title, label: 'Название', maxlength: 255 %>
<%= link_to @stage_achievement.scan_file_name, @stage_achievement.scan.url if @stage_achievement.scan.file? %>
<%= f.input :scan, as: :file, label: 'Скан'%>
</fieldset>
<%= f.button :submit %>
<%= link_to I18n.t("back"),
    manage_report_edit_chair_attestation_path(
      report_id: 'chair_attestation',
      chair: @stage_achievement.stage.chair.id)
%>
