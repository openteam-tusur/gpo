<% title "Журнал посещаемости", :visitations %>

<% content_for :hint do %>
  <p><b>Для изменения баллов за посещаемость</b> перейдите к журналу посещаемости соответствующего проекта</p>
<% end %>

<div class="visitationlog">
  <% @chair.projects.active.each_with_index do |project, index| %>
    <div id="project_<%= project.id %>" class="project">
      <%= project.permitted_to?(:read) ? link_to(project.cipher, chair_project_url(project.chair, project), :class => 'chair_cipher') : project.cipher %>
      <%= render :partial => 'visitation_for_project', :locals => {:project => project} %>
    </div>
  <% end -%>
</div>

