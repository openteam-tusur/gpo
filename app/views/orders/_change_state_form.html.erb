<% form_for(:order, :url => update_state_chair_order_path(order.chair, order), :html => {:method => :put} ) do |form| %>
  <%= form.error_messages %>
  <fieldset>
    <% if permitted_to?(:approve, order) %>
      <%= form.text_field :number %>
      <%= form.text_field :approved_at, :class => "datepicker"%>
    <% end %>
    <%= label_tag "comment", I18n.t("activity.comment") %>
    <%= text_area_tag "comment" %>
    <%= form.submit(I18n.t("order.to_review"), :name => :to_review) if permitted_to?(:to_review, order) %>
    <%= form.submit(I18n.t("order.review"), :name => :review) if permitted_to?(:review, order) %>
    <%= form.submit(I18n.t("order.cancel"), :name => :cancel) if permitted_to?(:cancel, order) %>
    <%= form.submit(I18n.t("order.approve"), :name => :approve) if permitted_to?(:approve, order) %>
  </fieldset>
<% end %>
